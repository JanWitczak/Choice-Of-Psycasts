<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/ThingDef[thingClass="Pawn"]/comps</xpath>
		<success>Always</success>
		<value>
			<li Class = "ChoiceOfPsycasts.ChoiceOfPsycastsProperties">
			</li>
		</value>
	</Operation>
	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/ThingDef[thingClass="Pawn" and not(comps)]</xpath>
		<success>Always</success>
		<value>
			<comps>
				<li Class = "ChoiceOfPsycasts.ChoiceOfPsycastsProperties">
				</li>
			</comps>
		</value>
	</Operation>
</Patch>